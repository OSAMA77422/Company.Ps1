@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>All Departmets</h1>

<br />
<br />

<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create Department</a>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>    
                <th>Code</th>
                <th>Name</th>
                <th>Date Of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
                    @foreach (var x in Model)
                    { 
                        <tr>
                            <td>@x.Code</td>
                            <td>@x.Name</td>
                            <td>@x.dateTime</td>
                            <td>
                                <a asp-action="Details" class="btn btn-success">Details</a>
                            </td>
                            <td>
                                <a asp-action="Edit" class="btn btn-warning">Update</a>
                            </td>
                            <td>
                                <a asp-action="Delete" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
        </tbody>
    </table>
}
else
{ 
    <h4 class="mt-4 alert alert-info">Department Table Is Empty :(</h4>
}